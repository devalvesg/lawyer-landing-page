---
import ServiceCard from './ServiceCard.astro';

const services = [
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="m16 16 3-8 3 8c-.87.65-1.92 1-3 1s-2.13-.35-3-1z"/><path d="m2 16 3-8 3 8c-.87.65-1.92 1-3 1s-2.13-.35-3-1z"/><path d="M7 21h10"/><path d="M12 3v18"/><path d="M3 7h2c2 0 5-1 7-2 2 1 5 2 7 2h2"/></svg>`,
    title: "Direito Civil",
    description: "Soluções estratégicas para conflitos cotidianos, responsabilidade civil e direitos reais."
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14,2 14,8 20,8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/><line x1="10" y1="9" x2="8" y2="9"/></svg>`,
    title: "Contratos",
    description: "Elaboração, análise e revisão contratual visando segurança jurídica e mitigação de riscos."
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/><path d="m9 12 2 2 4-4"/></svg>`,
    title: "Direito do Consumidor",
    description: "Defesa integral do consumidor contra abusos e práticas ilegais no mercado."
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>`,
    title: "Família e Sucessões",
    description: "Atendimento humanizado em inventários, divórcios, guarda e planejamento sucessório."
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="7" cy="11" r="4"/><circle cx="17" cy="11" r="4"/><path d="M7 7V4"/><path d="M17 7V4"/><path d="M11 11h2"/></svg>`,
    title: "Direito Criminal",
    description: "Atuação técnica em defesa criminal, acompanhamento processual e consultoria preventiva."
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="7" width="20" height="14" rx="2" ry="2"/><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/><path d="M6 11h4"/><path d="M14 11h4"/></svg>`,
    title: "Consultoria Jurídica",
    description: "Assessoria preventiva personalizada para evitar litígios e otimizar resultados."
  }
];
---

<section class="areas-section" id="servicos">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Áreas de Atuação</h2>
      <div class="gold-line"></div>
      <p class="section-subtitle">
        Excelência técnica e atendimento personalizado para garantir a defesa dos seus direitos em diversas esferas jurídicas.
      </p>
    </div>

    <div class="services-grid">
      {services.map((service, index) => (
        <ServiceCard
          icon={service.icon}
          title={service.title}
          description={service.description}
          delay={index * 100}
        />
      ))}
    </div>
  </div>
</section>

<style>
  .areas-section {
    padding: var(--space-24) 0;
    background: var(--white);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 3rem);
    color: var(--brown-dark);
    margin-bottom: var(--space-2);
  }

  .gold-line {
    width: 6rem;
    height: 4px;
    background: var(--gold);
    margin: var(--space-4) auto;
    border-radius: var(--radius-full);
  }

  .section-subtitle {
    font-size: var(--text-base);
    color: var(--gray-700);
    max-width: 42rem;
    margin: 0 auto;
    line-height: var(--leading-relaxed);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-8);
  }

  @media (max-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .areas-section {
      padding: var(--space-16) 0;
    }

    .services-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }

    .section-header {
      margin-bottom: var(--space-10);
    }
  }
</style>
