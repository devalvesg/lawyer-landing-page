---
import { Image } from 'astro:assets';
import sublogo from '../assets/sublogo.png';
---

<header class="header" id="header">
  <div class="header-container">
    <a href="#" class="header-logo" aria-label="Karina Gonzaga - Início">
      <Image
        src={sublogo}
        alt="Karina Gonzaga Advocacia"
        width={50}
        height={50}
        loading="eager"
        fetchpriority="high"
      />
    </a>

    <nav class="header-nav" id="nav">
      <ul class="nav-list">
        <li><a href="#servicos" class="nav-link">Serviços</a></li>
        <li><a href="#sobre" class="nav-link">Sobre</a></li>
        <li><a href="#depoimentos" class="nav-link">Depoimentos</a></li>
        <li><a href="#contato" class="nav-link">Contato</a></li>
      </ul>
    </nav>

    <a
      href="https://wa.me/5514920044847?text=Olá! Gostaria de agendar uma consultoria."
      class="header-cta"
      target="_blank"
      rel="noopener noreferrer"
    >
      Falar com Especialista
    </a>

    <button
      class="mobile-menu-btn"
      id="mobile-menu-btn"
      aria-label="Abrir menu"
      aria-expanded="false"
    >
      <span class="hamburger"></span>
    </button>
  </div>
</header>

<!-- Mobile Menu Overlay -->
<div class="mobile-menu-overlay" id="mobile-overlay">
  <nav class="mobile-nav">
    <ul class="mobile-nav-list">
      <li><a href="#servicos" class="mobile-nav-link">Serviços</a></li>
      <li><a href="#sobre" class="mobile-nav-link">Sobre</a></li>
      <li><a href="#depoimentos" class="mobile-nav-link">Depoimentos</a></li>
      <li><a href="#contato" class="mobile-nav-link">Contato</a></li>
    </ul>
    <a
      href="https://wa.me/5514920044847?text=Olá! Gostaria de agendar uma consultoria."
      class="mobile-cta"
      target="_blank"
      rel="noopener noreferrer"
    >
      Falar com Especialista
    </a>
  </nav>
</div>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(250, 247, 243, 0.95);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    transition: all var(--transition-base);
  }

  .header.scrolled {
    background: rgba(250, 247, 243, 0.98);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .header-container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: var(--space-4) var(--container-padding);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-8);
  }

  .header-logo {
    display: flex;
    align-items: center;
    transition: transform var(--transition-fast);
  }

  .header-logo:hover {
    transform: scale(1.05);
  }

  .header-logo img {
    width: 50px;
    height: 50px;
    object-fit: contain;
  }

  .header-nav {
    display: none;
  }

  .nav-list {
    display: flex;
    align-items: center;
    gap: var(--space-8);
    list-style: none;
  }

  .nav-link {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--brown-dark);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    position: relative;
    padding: var(--space-2) 0;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--gold);
    transition: width var(--transition-base);
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .header-cta {
    display: none;
    padding: var(--space-3) var(--space-6);
    font-size: var(--text-sm);
    font-weight: 400;
    color: var(--white);
    background: var(--gold);
    text-transform: uppercase;
    letter-spacing: 0.03em;
    transition: all var(--transition-base);
  }

  .header-cta:hover {
    background: var(--gold-light);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(212, 175, 55, 0.4);
  }

  /* Mobile Menu Button */
  .mobile-menu-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: transparent;
    border: none;
    cursor: pointer;
    z-index: 1001;
  }

  .hamburger {
    position: relative;
    width: 24px;
    height: 2px;
    background: var(--brown-dark);
    transition: all var(--transition-fast);
  }

  .hamburger::before,
  .hamburger::after {
    content: '';
    position: absolute;
    left: 0;
    width: 24px;
    height: 2px;
    background: var(--brown-dark);
    transition: all var(--transition-fast);
  }

  .hamburger::before {
    top: -8px;
  }

  .hamburger::after {
    bottom: -8px;
  }

  .mobile-menu-btn.active .hamburger {
    background: transparent;
  }

  .mobile-menu-btn.active .hamburger::before {
    top: 0;
    transform: rotate(45deg);
  }

  .mobile-menu-btn.active .hamburger::after {
    bottom: 0;
    transform: rotate(-45deg);
  }

  /* Mobile Menu Overlay */
  .mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(76, 47, 41, 0.98);
    z-index: 999;
    opacity: 0;
    visibility: hidden;
    transition: all var(--transition-base);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .mobile-menu-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  .mobile-nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-8);
  }

  .mobile-nav-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-6);
  }

  .mobile-nav-link {
    font-size: var(--text-xl);
    font-weight: 500;
    color: var(--white);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: var(--space-2);
    transition: color var(--transition-fast);
  }

  .mobile-nav-link:hover {
    color: var(--gold);
  }

  .mobile-cta {
    margin-top: var(--space-4);
    padding: var(--space-4) var(--space-8);
    font-size: var(--text-base);
    font-weight: 500;
    color: var(--brown-dark);
    background: var(--gold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: all var(--transition-base);
  }

  .mobile-cta:hover {
    background: var(--gold-light);
  }

  /* Desktop Styles */
  @media (min-width: 1024px) {
    .header-nav {
      display: block;
    }

    .header-cta {
      display: inline-flex;
    }

    .mobile-menu-btn {
      display: none;
    }
  }
</style>

<script>
  // Header scroll effect
  const header = document.getElementById('header');

  const handleScroll = () => {
    if (window.scrollY > 50) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }
  };

  window.addEventListener('scroll', handleScroll);

  // Mobile menu
  const mobileBtn = document.getElementById('mobile-menu-btn');
  const overlay = document.getElementById('mobile-overlay');
  const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');

  const toggleMenu = () => {
    mobileBtn?.classList.toggle('active');
    overlay?.classList.toggle('active');
    document.body.style.overflow = overlay?.classList.contains('active') ? 'hidden' : '';
  };

  mobileBtn?.addEventListener('click', toggleMenu);

  mobileNavLinks.forEach(link => {
    link.addEventListener('click', () => {
      if (overlay?.classList.contains('active')) {
        toggleMenu();
      }
    });
  });
</script>
